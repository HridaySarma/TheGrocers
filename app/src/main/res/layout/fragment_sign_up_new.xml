<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".Login_SignUp.SignUp.SignUpFragmentNew">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/signup_banner" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latobold"
            android:text="Sign Up"
            android:paddingStart="10dp"
            android:textColor="#000"
            android:textSize="26sp"
            android:textStyle="bold" />


        <com.zigis.materialtextfield.MaterialTextField
            android:id="@+id/name_edt_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mavenpro"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:hint="Name"
            android:text=""
            android:inputType="textPersonName"
            app:activeHintColor="@android:color/holo_blue_dark"
            app:activeUnderlineColor="@android:color/holo_blue_dark"
            app:cursorDrawableColor="@color/colorAccent"
            app:defaultHintColor="@android:color/darker_gray"
            app:defaultUnderlineColor="@android:color/darker_gray"
            app:errorColor="@android:color/holo_red_dark"
            app:isClearEnabled="true"
            app:isMultilineField="true"
            app:rightButtonColor="@color/light_gray"
            app:rightIcon="@drawable/ic_clear"
            android:textColor="#000"
            android:textSize="15sp"
            app:togglePasswordVisibility="false"
            app:underlineHeight="1.5dp" />
        <com.zigis.materialtextfield.MaterialTextField
            android:id="@+id/phone_edt_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mavenpro"
            android:inputType="phone"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_baseline_local_phone_24"
            android:drawablePadding="10dp"
            android:hint="Phone"
            android:text=""
            app:activeHintColor="@android:color/holo_blue_dark"
            app:activeUnderlineColor="@android:color/holo_blue_dark"
            app:cursorDrawableColor="@color/colorAccent"
            app:defaultHintColor="@android:color/darker_gray"
            app:defaultUnderlineColor="@android:color/darker_gray"
            app:errorColor="@android:color/holo_red_dark"
            app:isClearEnabled="true"
            app:isMultilineField="true"
            app:rightButtonColor="@color/light_gray"
            app:rightIcon="@drawable/ic_clear"
            android:textColor="#000"
            android:textSize="15sp"
            app:togglePasswordVisibility="false"
            app:underlineHeight="1.5dp" />
        <com.zigis.materialtextfield.MaterialTextField
            android:id="@+id/email_edt_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mavenpro"
            android:layout_marginTop="20dp"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/ic_at_the_rate"
            android:drawablePadding="10dp"
            android:hint="E-mail"
            android:text=""
            app:activeHintColor="@android:color/holo_blue_dark"
            app:activeUnderlineColor="@android:color/holo_blue_dark"
            app:cursorDrawableColor="@color/colorAccent"
            app:defaultHintColor="@android:color/darker_gray"
            app:defaultUnderlineColor="@android:color/darker_gray"
            app:errorColor="@android:color/holo_red_dark"
            app:isClearEnabled="true"
            app:isMultilineField="true"
            app:rightButtonColor="@color/light_gray"
            app:rightIcon="@drawable/ic_clear"
            android:textColor="#000"
            android:textSize="15sp"
            app:togglePasswordVisibility="false"
            app:underlineHeight="1.5dp" />

        <com.zigis.materialtextfield.MaterialTextField
            android:id="@+id/password_edt_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mavenpro"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:text=""
            app:activeHintColor="@android:color/holo_blue_dark"
            app:activeUnderlineColor="@android:color/holo_blue_dark"
            app:cursorDrawableColor="@color/colorAccent"
            app:defaultHintColor="@android:color/darker_gray"
            app:defaultUnderlineColor="@android:color/darker_gray"
            app:errorColor="@android:color/holo_red_dark"
            app:isClearEnabled="true"
            app:isMultilineField="true"
            app:rightButtonColor="@color/light_gray"
            app:rightIcon="@drawable/ic_clear"
            android:textColor="#000"
            android:textSize="15sp"
            app:togglePasswordVisibility="false"
            app:underlineHeight="1.5dp" />

        <Button
            android:id="@+id/sign_up_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SIGN UP"
            android:backgroundTint="@color/mapbox_plugins_green"
            android:layout_marginTop="32dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:fontFamily="@font/varela_round"
            android:text="Or, register with "
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="32dp"
            android:layout_height="50dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#DDA5A5"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:src="@drawable/google_icon"
                    />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#DDA5A5"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:src="@drawable/facebook_icon"
                    />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#DDA5A5"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:src="@drawable/truecallernew"
                    />


            </androidx.cardview.widget.CardView>

        </LinearLayout>




    </LinearLayout>

</ScrollView>