<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Login_SignUp.OTP.OTPFragment">

    <TextView
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:letterSpacing="0.01"
        android:text="A 6-digit OTP has been sent to 9090909090"
        android:fontFamily="@font/varela_round"
        />

    <com.mukesh.OtpView
        android:id="@+id/otp_view"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:inputType="number"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:focusedByDefault="true"
        android:itemBackground="@color/colorPrimary"
        android:textColor="#000000"
        app:OtpItemCount="6"
        app:OtpLineColor="@color/mapbox_plugins_material_grey_200"
        app:OtpViewType="rectangle"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/varela_round"
            android:layout_height="wrap_content"
            android:text="Didn't receive code?"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend OTP"
            android:textColor="@color/mapbox_plugins_bright_blue"
            android:fontFamily="@font/latobold"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/countdown_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="00:00"
            android:textColor="#000"
            />



    </LinearLayout>

    <Button
        android:id="@+id/verify_and_create_acc_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FFE500"
        android:text="Verify and create account"
        android:textColor="#000000"
        android:textSize="10sp"
        android:fontFamily="@font/varela_round"
        />

</LinearLayout>