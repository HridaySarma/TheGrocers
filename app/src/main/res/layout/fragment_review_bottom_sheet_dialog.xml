<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Give Feedback"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:fontFamily="@font/ibmplexsemibold"
            />

        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:background="#464646"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="How did we do ?"
            android:textColor="#000"
            android:fontFamily="@font/mavenpro"
            android:textSize="16sp"
            />

        <com.willy.ratingbar.ScaleRatingBar
            android:id="@+id/rbs_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srb_stepSize="0.5"
            app:srb_minimumStars="1"
            app:srb_rating="0"
            app:srb_numStars="5"
            app:srb_clickable="true"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Care to share more about it"
            android:textSize="16sp"
            android:fontFamily="@font/mavenpro"
            android:layout_marginTop="16dp"
            android:textColor="#000"
            />


        <EditText
            android:id="@+id/feedback_edt"
            android:layout_width="match_parent"
            android:background="@drawable/rectangle_bg"
            android:layout_marginTop="16dp"
            android:layout_height="200dp"
            android:hint="Write something here"
            android:textSize="14sp"
            android:gravity="top"
            android:padding="5dp"
            />

        <Button
            android:id="@+id/publish_btn_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publish feedback"
            android:textSize="13sp"
            android:textColor="#000"
            android:layout_marginTop="16dp"
            android:backgroundTint="#31C8BA"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Your feedback will be available publicly."
            android:layout_marginTop="5dp"
            android:fontFamily="@font/mavenpro"
            android:textSize="14sp"
            android:textColor="#000"
            />

    </LinearLayout>

</ScrollView>