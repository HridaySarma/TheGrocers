<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="#fff"
    android:layout_height="200dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/product_image"
            android:layout_width="0dp"
            android:scaleType="fitCenter"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="3"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRODUCT NAME MINGHT BE THIS LONG DONNO HOW MUCH IT WILL E "
                android:textColor="#9000"
                android:maxLines="4"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="14sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/product_selling_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 6000"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:textColor="#092CEA"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 7000"
                    android:textSize="13sp"
                    android:padding="5dp"
                    android:textColor="#092CEA"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:gravity="top"
                    android:layout_marginBottom="4dp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/quantity_details_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:text="500 gms"
                android:textColor="#000"
                android:fontFamily="serif"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addToCartProdBtn"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                app:fabCustomSize="35dp"
                android:src="@drawable/ic_baseline_shopping_cart_24"
                />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>