<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="#F1EDED"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:weightSum="12"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:gravity="center|start"
            android:layout_height="0dp">

            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/rv_itm_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srb_numStars="5"
                app:srb_starWidth="12dp"
                app:srb_starHeight="12dp"
                />

            <TextView
                android:id="@+id/rating_tv_whole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/latobold"
                android:textColor="#DA4B4B"
                android:layout_gravity="center"

                />


        </LinearLayout>

        <TextView
            android:id="@+id/r_itm_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_marginTop="8dp"
            android:text="This size of this t-shirt was correct, it is perfect. I am very happy with that order"
            android:textColor="#000"
            android:fontFamily="@font/latobold"
            android:textSize="14sp"
            />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_weight="3"
          android:layout_height="0dp">

          <TextView
              android:id="@+id/r_itm_userName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Tumbo "
              android:layout_alignParentStart="true"
              android:fontFamily="@font/mavenpro"
              android:layout_centerInParent="true"
              android:textSize="13sp"
              />

          <TextView
              android:id="@+id/r_itm_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Tumbo "
              android:fontFamily="@font/mavenpro"
              android:layout_alignParentEnd="true"
              android:layout_centerInParent="true"
              android:textSize="13sp"
              />

      </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>